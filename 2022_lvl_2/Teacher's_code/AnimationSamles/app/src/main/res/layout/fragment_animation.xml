<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/animateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анимировать"
        app:layout_constraintBottom_toTopOf="@+id/animateButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/animateButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анимировать2"
        app:layout_constraintBottom_toTopOf="@+id/animateButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animateButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/animateButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анимировать3"
        app:layout_constraintBottom_toTopOf="@+id/animateButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animateButton2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/animateButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анимировать4"
        app:layout_constraintBottom_toTopOf="@+id/animateButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animateButton3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/animateButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анимировать5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animateButton4" />

</androidx.constraintlayout.widget.ConstraintLayout>