        <TextView
            android:id="@+id/textViewThorClosed"
            app:layout_constraintStart_toEndOf="@id/textViewThor"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="CLOSED"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textViewThor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Thor"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/textViewThorClosed"
            app:layout_constraintStart_toEndOf="@id/imageViewThor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerIronMan"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageViewIronManIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ironman_icon"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewIronClosed"
            app:layout_constraintStart_toEndOf="@id/textViewIronMan"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="CLOSED"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textViewIronMan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Iron man"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/textViewIronClosed"
            app:layout_constraintStart_toEndOf="@id/imageViewIronManIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerNaz"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageViewNaz"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/naz_icon"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewNaz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Nazentsev Andrey"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewNaz" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>