        <TextView
            android:id="@+id/textViewSuperClosed"
            app:layout_constraintStart_toEndOf="@id/textViewSuperMen"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="CLOSED"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textViewSuperMen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Supermen"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/textViewSuperClosed"
            app:layout_constraintStart_toEndOf="@id/imageViewSuperManIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerThor"
        android:layout_width="409dp"
        android:layout_height="50dp"
