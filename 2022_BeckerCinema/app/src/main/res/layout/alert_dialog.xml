<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="308dp"
        android:layout_height="240dp"
        android:background="@drawable/alert_dialog_background">

        <EditText
            android:id="@+id/collection_title_input_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:fontFamily="@font/graphic_regular"
            android:hint="@string/choose_collection_name"
            android:padding="@dimen/dimen_4"
            android:textColor="@color/myGrey"
            android:textColorHint="@color/mySemiGrey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/done_button"
            app:layout_constraintEnd_toStartOf="@+id/close_button"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/done_button_background"
            android:enabled="false"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_24"
            android:paddingBottom="@dimen/dimen_8"
            android:text="@string/apply"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="@drawable/my_ripple_gray_rect"
            android:padding="5dp"
            android:src="@drawable/cross_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>