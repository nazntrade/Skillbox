<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_enabled="true" android:drawable="@drawable/heart_icon_checked">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>

    <item android:state_activated="false" android:state_enabled="true" android:drawable="@drawable/heart_icon">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>
</selector>
