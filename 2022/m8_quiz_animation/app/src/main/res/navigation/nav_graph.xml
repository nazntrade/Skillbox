<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.skillbox_hw_quiz.ui.main.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.example.skillbox_hw_quiz.ui.questions.QuestionsFragment"
        android:label="QuestionsFragment"
        tools:layout="@layout/fragment_questions">
        <action
            android:id="@+id/action_questionsFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:enterAnim="@anim/slide_anim_in_to_left"
            app:exitAnim="@anim/slide_anim_out_to_left"
            app:popEnterAnim="@anim/slide_pop_in_to_tight"
            app:popExitAnim="@anim/slide_pop_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.skillbox_hw_quiz.ui.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_results">
        <action
            android:id="@+id/action_resultFragment_to_startFragment"
            app:destination="@id/startFragment"

            app:popUpTo="@+id/startFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="args"
            app:argType="string" />
        <!--app:popUpTo="@+id/startFragment"
            app:popUpToInclusive="true"
            this code in order not to add TO BACKSTACK-->
    </fragment>
</navigation>